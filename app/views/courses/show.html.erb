<h1 course-id="<%= @course.id %>"><em><%= @course.title %></em></h1>
<h3><small><%= @course.description %></small></h3>
<hr>

<%= render 'shared/flash' %>
<div id="add-student-alerts"></div>

<div class="ui-widget">
  <label for="search">
    <button id='autocomplete-student-search'class='btn btn-xs btn-search'>Invite Student to Course</button>
  </label>
  <input id="student-search" size="30" placeholder="find student by name or email">
</div>

<div class="course-create">
  <%= form_tag new_course_lecture_path(@course), method: "get" do %>
    <button id='create-lecture'class='ui-widget btn btn-search'>Create New Lecture</button>
  <% end %>
</div>
<hr>

<br>
<% unless @lectures.empty? %>
  <button id="lecture-display" class='btn btn-lg btn-submit '>See Lectures</button>
  <button id="student-display" class='btn btn-lg btn-submit '>See Students</button>

  <%= render partial: "lecture_list", locals: { lectures: @lectures} %>

  <div>
    <%= render partial: "student_list", locals: { students: @students} %>
  </div>
<% else %>
  <p class='text-muted'>
    There are currently no lectures for this course
  </p>
<% end %>


<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
