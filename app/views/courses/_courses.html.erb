
<!-- Table -->
<table class="table table-hover table-responsive" id='course-data-table'>

  <th>Course ID</th>
  <th>Title</th>
  <th>Description</th>
  <th>Students Enrolled</th>
  <th>Delete</th>

  <% courses.each do |course| %>

    <tr class="table-row-link" data-url="<%= course_path(course) %>">
      <td><%= course.id %></td>
      <td><%= course.title %></td>
      <td><%= course.description %></td>
      <td><%= course.students.count %></td>
      <td><a src="#" action='course-delete' id="<%= course.title.parameterize
       %>" title="<%= course.title %>">Remove</a></td>
    </tr>

  <% end %>

</table> <!-- End of table -->
