
<!-- Table -->
<table class="table table-hover table-responsive">

  <th>Course ID</th>
  <th>Title</th>
  <th>Description</th>
  <th>Students Enrolled</th>

  <% courses.each do |course| %>

    <tr class="table-row-link" data-url="<%= course_path(course) %>">
      <td><%= course.id %></td>
      <td><%= course.title %></td>
      <td><%= course.description %></td>
      <td><%= course.students.count %></td>
    </tr>

  <% end %>

</table> <!-- End of table -->

<div class="ui-widget">
<label for="search"><button id='autocomplete-search' class='btn btn-sm btn-primary'>Search</button> </label>
<input id="search" size="50" placeholder="find course by name or description">
</div>

<div id="find-course">

</div>
